<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:background="#ff9bc1e6"
    android:padding="20dp"
    tools:context="com.ketocloud.working1.Home">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.56"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/header"
                android:src="@drawable/logo"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.64"
                android:layout_gravity="center_horizontal|right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/company_name"
                    android:id="@+id/textView"
                    android:gravity="center_horizontal"
                    android:height="40sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="35sp"
                    android:layout_gravity="right"
                    android:textSize="22sp"
                    android:visibility="visible"
                    android:singleLine="true"
                    android:typeface="normal"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/activity_name3"
                    android:id="@+id/PageName"
                    android:layout_gravity="right"
                    android:textColor="#ff000000"
                    android:textSize="14sp"
                    android:textIsSelectable="true"
                    android:layout_marginTop="5dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="TM"
                android:id="@+id/textView2"
                android:layout_marginTop="15sp"
                android:textColor="#ff000000"
                android:autoText="false"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="User  :"
                    android:id="@+id/textView6"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="User Type"
                    android:id="@+id/textView9"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="User Name"
                android:id="@+id/users_name_message"
                />

        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView2"
            android:layout_gravity="center_horizontal"
            android:fillViewport="false"
            android:layout_weight="0.33">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/PatientHomeButtons">

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="@string/home_button3"
                        android:id="@+id/button3"
                        android:onClick="openPantry"
                        android:layout_margin="@dimen/home_button_margin"
                        android:layout_gravity="center_horizontal" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="@string/home_button2"
                        android:id="@+id/button2"
                        android:onClick="openCalculator"
                        android:layout_margin="@dimen/home_button_margin"
                        android:layout_gravity="center_horizontal" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="@string/home_button1"
                        android:id="@+id/button1"
                        android:onClick="openSoupsSauces"
                        android:layout_margin="@dimen/home_button_margin"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:id="@+id/ProHomeButtons"
                    android:layout_marginTop="10dp">

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="@string/home_button4"
                        android:id="@+id/button4"
                        android:onClick="openReferralPatient"
                        android:layout_marginTop="12dp"
                        android:visibility="visible"
                        android:layout_margin="@dimen/home_button_margin"
                        android:layout_gravity="center_horizontal" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="@string/home_button5"
                        android:id="@+id/button5"
                        android:onClick="openReferralDietitian"
                        android:visibility="visible"
                        android:layout_margin="@dimen/home_button_margin"
                        android:layout_gravity="center_horizontal" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="@string/home_button6"
                        android:onClick="openReferralPhysician"
                        android:id="@+id/button6"
                        android:visibility="visible"
                        android:layout_margin="@dimen/home_button_margin"
                        android:layout_gravity="center_horizontal" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="@string/home_button7"
                        android:onClick="openFaceToFace"
                        android:id="@+id/button7"
                        android:layout_marginTop="12dp"
                        android:visibility="visible"
                        android:layout_margin="@dimen/home_button_margin"
                        android:layout_gravity="center_horizontal" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="@string/home_button8"
                        android:onClick="openDataDisplay"
                        android:id="@+id/button8"
                        android:visibility="visible"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/home_button_margin" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="@string/home_button9"
                        android:onClick="openDatabaseApproval"
                        android:id="@+id/button9"
                        android:visibility="visible"
                        android:layout_margin="@dimen/home_button_margin"
                        android:layout_gravity="center_horizontal" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="@string/home_button10"
                        android:onClick="openReferralPatientTransfer"
                        android:id="@+id/button10"
                        android:layout_marginTop="12dp"
                        android:visibility="visible"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/home_button_margin" />

                    <Button
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="@string/title_activity_home"
                        android:onClick="openLogin"
                        android:id="@+id/button11"
                        android:layout_margin="@dimen/home_button_margin"
                        android:layout_marginTop="12dp"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_gravity="center_horizontal" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Button"
                        android:id="@+id/button"
                        android:visibility="invisible" />

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="40dp"
                        android:padding="@dimen/home_button_margin" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!-- Content -->

</RelativeLayout>



